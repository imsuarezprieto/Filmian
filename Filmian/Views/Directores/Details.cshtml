@model Filmian.Models.Director

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
	<h4>Director</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Nombre</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor( model => model.Nombre )
		</dd>
		<dt class="col-sm-2">Nacionalidad</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor( model => model.Nacionalidad )
		</dd>
		<dt class="col-sm-2">Fecha de Nacimiento</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor( model => model.FechaNacimiento )
		</dd>
	</dl>
	<table class="table">
		<thead>
			<tr>
				<th>Título</th>
				<th>Duración</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Peliculas) {
				<tr>
					<td>
						@Html.DisplayFor( modelItem => item.Titulo )
					</td>
					<td>
						@Html.DisplayFor( modelItem => item.Duracion )
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DirectorID">Edit</a> |
    <a asp-action="Index">Volver a Directores</a>
</div>
