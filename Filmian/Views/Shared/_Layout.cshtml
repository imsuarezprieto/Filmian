<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FILMIAN</title>
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark fixed-top border-bottom box-shadow mb-3">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/film.png" height="32" width="32" class="d-inline-block align-top" /> Filmian</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="container">
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse nav-pills nav-justified">
					<ul class="navbar-nav justify-content-start flex-grow-1">
						<li class="nav-item">
							<a class="nav-link @(ViewBag.Section=="Directores"?"active":"")" asp-action="Index" asp-controller="Directores"><span class="icon">&#xE125;</span> Directores</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @(ViewBag.Section=="Peliculas"?"active":"")" asp-action="Index" asp-controller="Peliculas"><span class="icon">&#xE116;</span> Películas</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Filmian
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
